<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://hibernate.org/dtd/hibernate-mapping-3.0.dtd">
	
<hibernate-mapping package="org.bandtracker.hibernate.entity">
	<class name="Users" table="Users" >
		<id name="userId" type="Integer">
			<column name="user_ID" />
			<generator class="select" />
		</id>
		<property name="username" type="string">
			<column name="username" not-null="true" unique="true"/>
		</property>
		<property name="userType" type="string">
			<column name="user_type" />
		</property>
		<property name="isAdmin" type="boolean">
			<column name="is_admin" />
		</property>
		<property name="publicName" type="string">
			<column name="public_name" />
		</property>
		<property name="firstName" type="string">
			<column name="first_name" />
		</property>
				<property name="lastName" type="string">
			<column name="last_name" />
		</property>
				<property name="streetAddress" type="string">
			<column name="street_address" />
		</property>
				<property name="town" type="string">
			<column name="town" />
		</property>
				<property name="zipCode" type="string">
			<column name="zip_code" />
		</property>
				<property name="email" type="string">
			<column name="email" />
		</property>
				<property name="phone" type="Integer">
			<column name="phone" />
		</property>
				<property name="websiteURL" type="string">
			<column name="website_URL" />
		</property>
				<property name="password" type="string">
			<column name="password" />
		</property>
				<property name="bio" type="string">
			<column name="bio" />
		</property>
		
		<!--
			<one-to-many name="ShowVenue" class="org.bandtracker.hibernate.entity.ShowVenue"/>
		-->

		<set name="bookings" table="booking" inverse="true" cascade="save-update" lazy="true" fetch="select">
			<key>
				<column name="user_ID" not-null="true"></column>
			</key>
			<one-to-many class="org.bandtracker.hibernate.entity.Booking" />
		</set>
		
		
	</class>
	
</hibernate-mapping>